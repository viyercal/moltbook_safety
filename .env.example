# Moltbook API Configuration
# Required: Get your API key by registering at https://www.moltbook.com/api/v1/agents/register
MOLTBOOK_API_KEY=moltbook_sk_your_api_key_here

# OpenRouter API Configuration
# Required: Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model Selection
OPENROUTER_MODEL=google/gemini-3-flash-preview

# Judge Configuration
# Model used for repairing malformed JSON responses (cheaper/faster)
REPAIR_MODEL=google/gemini-2.5-flash-lite

# Maximum retry attempts for judge calls
JUDGE_MAX_ATTEMPTS=3

# Maximum tokens for judge responses
JUDGE_MAX_TOKENS=1800

# Retry backoff delay in seconds
JUDGE_RETRY_BACKOFF_S=0.5

# Maximum concurrent worker threads for parallel processing
JUDGE_MAX_WORKERS=16
